@model Honcizek.DAL.Models.Trabajos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Trabajos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProyectoId" />
            <div class="form-group">
                <label asp-for="AgenteId" class="control-label">Programador</label>
                <select data-live-search="true" asp-for="AgenteId" class="form-control" asp-items="ViewBag.AgenteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" />
            </div>
        </form>
        <div class="pt-3 ">
            <a asp-controller="Trabajos" asp-action="Index" asp-route-id="@Model.ProyectoId">
                <button class="btn btn-primary">Volver al listado</button>
            </a>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/Administrador/Trabajos/Trabajos.js"></script>
    <script>
        $(document).ready(function () {
            Trabajos.init();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

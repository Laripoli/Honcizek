@model Honcizek.DAL.Models.Tickets

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-12 readonly">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="AgenteId" />
            <input type="hidden" asp-for="FechaRegistro" value="@ViewData["hoy"]" />
            <input type="hidden" asp-for="HoraRegistro" value="@ViewData["hora"]" />
            <div class="row col-12">
                <div class="form-group col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input disabled asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Estado" class="control-label"></label>
                    <select disabled asp-for="Estado" class="form-control" asp-items="ViewBag.Estado"></select>
                </div>
            </div>


            <div class="row col-12">

                @if (Model.Estado == "Finalizado" || Model.Estado == "Cancelado")
                {
                    <div class="form-group col-4">
                        <label asp-for="FechaFinalizacion" class="control-label"></label>
                        <input disabled type="date" asp-for="FechaFinalizacion" class="form-control" />
                        <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="HoraFinalizacion" class="control-label"></label>
                        <input disabled type="time" asp-for="HoraFinalizacion" class="form-control" />
                        <span asp-validation-for="HoraFinalizacion" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="form-group col-4">
                <label asp-for="Descripcion" class="control-label">Descripci&oacute;n</label>
                <textarea disabled asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </form>
        <div class="pt-3 pl-3">
            <a asp-action="Listado" asp-route-id="@ViewData["SuscripcionId"]">
                <button class="btn btn-primary">Volver al listado</button>
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

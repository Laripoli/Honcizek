    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Proyectos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionDesarrollo)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.DescripcionDesarrollo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.FRegistro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-4">
            @if (@Model.FechaFinPrevista != null)
            {
                @Html.DisplayFor(model => model.Finicio)
            }
            else
            {
                <span>Sin especificar</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinPrevista)
        </dt>
        <dd class="col-sm-4">
            @if (@Model.FechaFinPrevista != null)
            {
                @Html.DisplayFor(model => model.FFinPrevista)
            }
            else
            {
                <span>Sin finalizar</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinReal)
        </dt>
        <dd class="col-sm-4">
            @if (@Model.FechaFinReal != null)
            {
                @Html.DisplayFor(model => model.FFin)
            }
            else
            {
                <span>Sin especificar</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HorasInternasPrevistas)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.HorasInternasPrevistas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fase)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Fase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Cliente.FullName)
        </dd>
    </dl>

    <form class="pb-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </form>
    <a asp-action="Index">
        <button class="btn btn-primary">Volver al listado</button>
    </a>
</div>

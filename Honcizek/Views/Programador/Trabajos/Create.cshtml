@model Honcizek.DAL.Models.Trabajos

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear trabajo</h1>

<hr />
@if (!(bool)ViewData["error"])
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProyectoId" value="@ViewData["proyecto_id"]" />
                <input type="hidden" asp-for="AgenteId" value="@ViewData["usuario_id"]" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <input type="submit" value="Crear" class="btn btn-info" />
                </div>
            </form>
            <div class="pt-3 ">
                <a asp-action="IndexUsuario" asp-route-id="@ViewData["proyecto_id"]">
                    <button class="btn btn-primary">Volver al listado</button>
                </a>
            </div>
        </div>
    </div>
}
else
{
    <h4>Est&aacute;s intentando crear un trabajo para un proyecto que no existe.</h4>
    <span>Prueba a volver al <a class="honci-link" asp-controller="Proyectos" asp-action="Index">Listado de proyectos</a> e int&eacute;ntalo de nuevo</span>
}

@section Scripts {
    <script type="text/javascript" src="~/js/Programador/Trabajos/Trabajos.js"></script>
    <script>
        $(document).ready(function () {
            Trabajos.init();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

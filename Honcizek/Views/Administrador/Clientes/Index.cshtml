@model IEnumerable<Honcizek.DAL.Models.Clientes>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Listado de clientes</h1>

<p class="float-right">
    <a asp-action="Create">
        <button class="btn btn-info">Crear nuevo</button>
    </a>
</p>

<form id="filtrador" class="float-left pl-3 row" asp-action="Index" method="get">
    <div class="form-actions no-color px-3">
        <label for="nombre">
            Buscar nombre: <input id="filtro" type="text" name="search" value="@ViewData["currentFilter"]" />
        </label>
    </div>
    <div class="row pl-5 pt-3">
        <a class="pr-2">
            <button class="btn btn-primary">Buscar</button>
        </a>
        <a asp-action="Index">
            <button class="btn btn-dark" id="limpia-filtros">
                Limpiar filtro
            </button>
        </a>
    </div>
</form>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movil)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <button class="btn btn-primary">Editar</button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-danger">Eliminar</button>
                        </a>


                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@if (!(Model.Count() > 0))
{
    <h2 style="text-align: center;width: 100%">A&uacute;n no hay registros</h2>
}

@section Scripts {
    <script type="text/javascript" src="~/js/Administrador/Clientes/Clientes.js"></script>
    <script>
        $(document).ready(function () {
            Clientes.init();
        });
    </script>
}


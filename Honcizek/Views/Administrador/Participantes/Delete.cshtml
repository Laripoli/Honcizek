@model Honcizek.DAL.Models.ProyectosParticipantes

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Seguro que quieres quitar a @Model.Usuario.FullName del proyecto @Model.Proyecto.Nombre?</h3>
<div>
    <hr />

    <div class="row justify-content-center">

    <a asp-controller="Participantes" asp-action="Index" asp-route-id="@Model.ProyectoId">
        <button class="btn btn-primary">Volver al listado</button>
    </a>
    <form class="px-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </form>
    </div>
</div>
